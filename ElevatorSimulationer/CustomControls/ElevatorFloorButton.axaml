<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="using:ElevatorSimulationer.CustomControls"
             mc:Ignorable="d" d:DesignWidth="120" d:DesignHeight="120"
             xmlns:prism="http://prismlibrary.com/"
             prism:ViewModelLocator.AutoWireViewModel="True"
             x:Class="ElevatorSimulationer.CustomControls.ElevatorFloorButton">

  <UserControl.Styles>
        <!-- 通用圆形按钮样式 -->
    <Style Selector="Ellipse">
      <Setter Property="Width" Value="80"/>
      <Setter Property="Height" Value="80"/>
      <Setter Property="StrokeThickness" Value="2"/>
      <Setter Property="Stroke" Value="Black"/>
    </Style>

  </UserControl.Styles>
  <!-- 一个圆形按钮 -->
            <Grid  Width="80" Height="80" Margin="6" >
              <Ellipse Fill="{Binding $parent[local:ElevatorFloorButton].ButtonFill}" />
              <TextBlock Text="{Binding $parent[local:ElevatorFloorButton].Floor}"
                         HorizontalAlignment="Center"
                         VerticalAlignment="Center"
                         FontSize="50"
                         Foreground="Black"/>
            </Grid>

</UserControl>